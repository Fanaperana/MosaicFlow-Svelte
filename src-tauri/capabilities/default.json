{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:allow-read",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        },
        {
          "path": "$DOWNLOAD/**"
        },
        {
          "path": "$DESKTOP/**"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
     {
      "identifier": "http:default",
      "allow": [{ "url": "https://*" }],
      "deny": [{ "url": "" }]
    },
    "fs:default",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-read-dir",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "http:default"
  ]
}